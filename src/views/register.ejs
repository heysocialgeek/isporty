<!DOCTYPE html>
<html lang="es">

<head>
  <%- include("./partials/head.ejs") %>
  <title>iSporty - Inicio de sesión</title>
  <link rel="stylesheet" href="/css/styles-register.css">
</head>

<body>
  <%- include("./partials/header.ejs") %>
  <main class="main-form">
    <h1>Registrate</h1>
    <section>

      <form action="" method="GET" class="create-form" form="register-form">
        <h2>Datos sobre tu cuenta</h2>

        <div class="controlador">
          <label>* Nombre</label>
          <input type="text" name="nombre" class="control">
        </div>
        <div class="controlador">
          <label>* Apellido</label>
          <input type="text" name="apellido" class="control">
        </div>

        <div class="controlador">
          <label>* Email</label>
          <input type="text" name="email" class="control">
        </div>

        <div class="controlador">
          <label>* Contraseña</label>
          <input type="password" name="password" class="control">
        </div>


        <div class="controlador">
          <label>* Documento</label>
          <input type="text" name="documento" class="control">
        </div>
        <div class="controlador">
          <label>* Fecha de nacimiento</label>
          <input type="date" name="fecha-nacimiento" class="control">
        </div>
      </form>



      <form action="" method="GET" class="create-form" id="register-form">
        <h2>Datos de envío</h2>
        <div class="controlador">
          <label>* Calle</label>
          <input type="text" name="calle" class="control">
        </div>
        <div class="controlador">
          <label>* Número</label>
          <input type="text" name="numero-calle" class="control">
        </div>
        <div class="controlador">
          <label>* Piso/departamento</label>
          <input type="text" name="piso" class="control">
        </div>
        <div class="controlador">
          <label>* Código postal</label>
          <input type="text" name="codigo-postal" class="control">
        </div>
        <div class="controlador">
          <label>Información adicional</label>
          <input type="text" name="info-adicional" class="control">
        </div>
        <div>
          <input type="checkbox" name="terminos">
          <label for="términos">Acepto los términos y condiciones</label>
        </div>
        <p>* campos obligatorios</p>
        <button type="submit" class="boton-formulario">Registrarse</button>
      </form>

    </section>
    <a href="https://wa.me/5491127682598?text=Me%20gustar%C3%ADa%20contactar%20con%20un%20asesor%20comercial"
      class="whatsapp" target="_blank"> <i class="fab fa-whatsapp"></i></a>
  </main>
  <%- include("./partials/footer.ejs") %>
</body>

</html>