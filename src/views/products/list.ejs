<!DOCTYPE html>
<html lang="es">
    
        <%- include("../partials/head.ejs", {
            pageTitle: "Lista de productos",
            cssTag: "<link rel='stylesheet' href='/css/styles-productList.css'> <link rel='stylesheet' href='/css/styles-index.css'>"}) %>
    
    <body>
        <%- include("../partials/header.ejs") %>
        <main>
            <img class="banner-sin-interes" src="/img/banner-sin-interes.png" alt="">
            <div class="main-container">
                <div class="product-results">
                    <p class="product-amount">Cantidad de productos: <%= products.length %></p>
                    <div class="filter-section">
                        <p id="filter-p">Filtrar <i class="fas fa-chevron-down"></i></p>
                    </div>
                </div>
                <div class="filter-container hidden">
                <div class="filter-mobile">
                    <div class="mobile-container">
                        <h3 class="h3-filter-mobile">Talle</h3>
                        <div class="filter-scroll">
                            <% for( let i = 0; i < sizes.length; i++ ) { %>
                                <div>
                                    <%= sizes[i].name %> <input type="checkbox" name="productSize" value="<%= sizes[i].id %>">
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="mobile-container">
                        <h3 class="h3-filter-mobile">Marca</h3>
                        <div class="filter-scroll">
                            <% for( let i = 0; i < brands.length; i++ ) { %>
                                <div>
                                    <%= brands[i].name %> <input type="checkbox" name="productBrand" value="<%= brands[i].id %>">
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="mobile-container">
                        <h3 class="h3-filter-mobile">Género</h3>
                        <div class="filter-scroll">
                            <% for( let i = 0; i < genders.length; i++ ) { %>
                                <div>
                                    <%= genders[i].name %> <input type="checkbox" name="productGender" value="<%= genders[i].id %>">
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="mobile-container">
                        <h3 class="h3-filter-mobile">Colores</h3>
                        <div class="filter-scroll">
                            <% for( let i = 0; i < colors.length; i++ ) { %>
                                <div>
                                    <%= colors[i].name %> <input type="checkbox" name="productColor" value="<%= colors[i].id %>">
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="mobile-container">
                        <h3 class="h3-filter-mobile">Precio</h3>
                        <div class="filter-scroll">
                            <div>
                                Hasta $6.500 <input type="checkbox" name="productPrice" value="to-6500">
                            </div>
                            <div>
                                $6.500 a $10.000 <input type="checkbox" name="productPrice" value="6500-to-10000">
                            </div>
                            <div>
                                Más de $10.000 <input type="checkbox" name="productPrice" value="10000-or-more">
                            </div>
                        </div>
                    </div>

                    <form action="">
                        <div class="buttons-filter">
                            <button class="button-filter-mobile">Filtrar</button>
                            <button class="button-filter-mobile">Atrás</button>
                        </div>
                    </form>
                </div>
                </div>

                <section class="section-style">
                    <% for (let i = 0; i < products.length; i++) { %>
                    <article class="article-style">
                        <a href="/products/detail/<%= products[i].id %> "><img class="imgProduct" src="/img/products/<%= products[i].image %>" alt="<%= products[i].name %>"></a>
                        <div class="product-description">
                            <h2><%= products[i].name %></h2>
                            <p class="price-style">$<%= products[i].price %></p>
                            <% if (products[i].price > 6000) { %>
                                <span class="envio">Envío gratis</span>  
                            <% } %>
                        </div>
                        <i class="far fa-heart"></i>
                        <div class="shoppingcart">
                            <i class="fas fa-cart-arrow-down"></i>
                        </div>
                    </article>
                    <% } %>
                </section>
            </div>
        </main>
        <%- include("../partials/footer.ejs") %>
        <script src="/js/burgerMenu.js"></script>
        <script src="/js/profileMenu.js"></script>
        <script src="/js/filterMenu.js"></script>
    </body>
</html>