<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include("../partials/head.ejs") %>
        <title>Lista de productos</title>
        <link rel="stylesheet" href="/css/styles-productList.css">
        <link rel="stylesheet" href="/css/styles-index.css">
    </head>
    <body>
        <%- include("../partials/header.ejs") %>
        <main>
            <div class="main-container">
                <div class="filter-container">
                    <div class="talle-container">
                        <h3>Talle</h3>
                        <span>34,5</span>
                        <span>35</span>
                        <span>35,5</span>
                        <span>36,5</span>
                        <span>37</span>
                        <span>37,5</span>
                        <span>38</span>
                        <span>39</span>
                        <span>39,5</span>
                        <span>40</span>
                        <span>41</span>
                    </div>

                    <div class="marca-container">
                        <h3>Marca</h3>
                        <span>Nike</span>
                        <span>Adidas</span>
                        <span>Puma</span>
                        <span>Jordan</span>
                        <span>Reebok</span>
                    </div>

                    <div class="genero-container">
                        <h3>Género</h3>
                        <span>Hombre</span>
                        <span>Mujer</span>
                    </div>

                    <div class="precio-container">
                        <h3>Precio</h3>
                        <span>Hasta $6.500</span>
                        <span>$6.500 a $10.000</span>
                        <span>Más de $10.000</span>
                        <form action="/productList" class="price-form">
                            <input type="text" name="Mínimo" placeholder="Mínimo">
                            <input type="text" name="Máximo" placeholder="Máximo">
                        </form>
                    </div>

                    <div class="descuentos-container">
                        <h3>Descuentos</h3>
                        <span>5% OFF</span>
                        <span>10% OFF</span>
                        <span>15% OFF</span>
                        <span>20% OFF</span>
                        <span>25% OFF</span>
                        <span>30% OFF</span>
                    </div>

                    <div class="ubicacion-container">
                        <h3>Ubicación</h3>
                        <span>Bs.As.</span>
                        <span>Córdoba</span>
                        <span>Santa Fe</span>
                        <span>Tucumán</span>
                    </div>
                </div>


                <div class="product-results">
                    <p>+2000 resultados</p>
                    <p>
                        <i class="fas fa-chevron-down"></i>
                        Filtrar</p>
                </div>
                <section class="section-style">
                    <% for (let i=0; i <productsDB.length; i++) { %>
                    <article class="article-style">
                        <img src="/img/<%= productsDB[i].image %>" alt="<%= productsDB[i].name %>">
                        <div class="product-description">
                            <h2><%= productsDB[i].name %></h2>
                            <p>$<%= productsDB[i].price %></p>
                        </div>
                        <i class="far fa-heart"></i>
                        <div class="shoppingcart">
                            <i class="fas fa-cart-arrow-down"></i>
                        </div>
                    </article>
                    <% } %>
                </section>
            </div>
        </main>
        <%- include("../partials/footer.ejs") %>
    </body>
</html>
